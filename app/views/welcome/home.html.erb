<%= image_tag 'bulboff.png', width: "100", height: "180", onclick: "changeImage()", id: "myImage"%>


<script>
  function changeImage() {
    var image = document.getElementById('myImage');
    if (image.src.match('bulboff')) {
      image.src = "/assets/bulbon.png";
    } else {
      image.src = "/assets/bulboff.png";
    }
  }
</script>



<button type="button" onclick="document.getElementById('myImage').src = '/assets/bulbon.png'">Turn On</button>
<button type="button" onclick="document.getElementById('myImage').src = '/assets/bulboff.png'">Turn off</button>

