<h1>Sign in</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Enter your email..." %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
  </p>
  <p>
    <%= f.submit "Sign in" %>
  </p>
<% end %>